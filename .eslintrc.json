{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "standard",
    "plugin:import/recommended",
    "plugin:node/recommended",
    "plugin:promise/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "no-console": "off"
  }
}
